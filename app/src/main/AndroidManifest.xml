<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.crazymoney.scanningwallet">

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

	<application
		android:name=".ScanningWalletApplication"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/Theme.ScanningWallet">

		<activity
			android:name=".mainLayout.MainLayoutActivity"
			android:configChanges="keyboard|keyboardHidden|orientation"
			android:label="@string/app_name"
			android:launchMode="singleTask"
			android:screenOrientation="portrait"
			android:theme="@style/SplashscreenTheme">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity
			android:name=".walletsLayout.WalletsLayoutActivity"
			android:configChanges="keyboard|keyboardHidden|orientation"
			android:label="@string/app_name"
			android:launchMode="singleTask"
			android:screenOrientation="portrait"
			android:theme="@style/NoActionBarTheme" />
		<activity
			android:name=".newWalletLayout.NewWalletLayoutActivity"
			android:configChanges="keyboard|keyboardHidden|orientation"
			android:label="@string/app_name"
			android:launchMode="singleTask"
			android:screenOrientation="portrait"
			android:theme="@style/NoActionBarTheme" />
		<activity
			android:name=".walletDetailLayout.WalletDetailLayoutActivity"
			android:configChanges="keyboard|keyboardHidden|orientation"
			android:label="@string/app_name"
			android:launchMode="singleTask"
			android:screenOrientation="portrait"
			android:theme="@style/NoActionBarTheme" />
	</application>
</manifest>
